<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="mapper.memberInfo">

	<resultMap type="memberDTO" id="memResult">	
		<result property="id" column="id" />	
		<result property="pwd" column="pwd" />
		<result property="nickname" column="nickname" />
		<result property="name" column="name" />
		<result property="birthday" column="birthday" />
		<result property="gender" column="gender" />
		<result property="callnum" column="callnum" />
		<result property="email" column="email" />
	</resultMap>
	

	<select id="viewMemberInfo" parameterType="String" resultType="MemberDTo">
		<![CDATA[
			SELECT * FROM HUGO_USER_INFO where id=#{id}	
		]]>
	</select>
	<update id="updateMemberInfo" parameterType="memberDTO">
		<![CDATA[
			UPDATE HUGO_USER_INFO 
				SET PWD = #{pwd}
					,NICKNAME = #{nickname}
					,EMAIL = #{email}
					,CALLNUM = #{callnum}
				WHERE ID = #{id}		
		]]>
	</update>
</mapper>